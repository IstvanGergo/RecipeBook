@model RecipeBook.ViewModels.RecipeDisplayModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label">Recept Neve</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
				<label asp-for="prep_time" class="control-label">Elkészítési idő</label>
                <input asp-for="prep_time" class="form-control" />
                <span asp-validation-for="prep_time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label">Rövid leírás</label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="SelectedTags">Tagek</label>
                <select asp-for="selectedTagIds" 
                    asp-items="@(new MultiSelectList( ViewBag.AllTags, "tag_id", "tag_name", Model.selectedTagIds ))"
                    class="form-control" multiple>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

        <form asp-action="Extract" method="post" enctype="multipart/form-data" class="mt-3">
            <div class="form-group">
                <label for="image">Upload Image for AI Extraction</label>
                <input type="file" name="image" class="form-control" />
            </div>
            <button type="submit" class="btn btn-secondary">Extract Recipe from Image</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
