@model RecipeBook.ViewModels.RecipeViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.prep_time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.prep_time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.selectedTagNames)
        </dt>
        <dd class= "col-sm-10">
            @string.Join( ", ", Model.selectedTagNames )
        </dd>

        @foreach ( var step in Model.recipe_steps )
        {
            <dt class="col-sm-2">@step.step_number</dt>
            <dd class="col-sm-10">@step.step_description</dd>
        }
        @foreach ( var quantity in Model.quantities )
        {
            <dd class="col-sm-10">@string.Join( " ", [@quantity.ingredient_name, @quantity.quantity, @quantity.measurement_name] )</dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
